---
import "../../global.css";
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const docs = await getCollection("docs");
docs.sort((a, b) => (a.data.order ?? 99) - (b.data.order ?? 99));
---

<Layout title="Docs" description="Docs" class="container mx-auto px-6 py-12">
  <h1 class="text-4xl font-bold mb-8">Docs</h1>

  <div class="grid md:grid-cols-2 gap-6 max-w-4xl">
    {
      docs.map((doc) => (
        <a href={`/docs/${doc.id}`} class="group p-6 rounded-2xl border border-gray-800 bg-gray-900/50 hover:border-gray-600 transition">
          <h2 class="text-xl font-semibold mb-2 group-hover:text-purple-400 transition">{doc.data.title}</h2>
          <p class="text-gray-400">{doc.data.description}</p>
        </a>
      ))
    }
  </div>
</Layout>
