{
  "name": "asiusai",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.2.9",
  "scripts": {
    "dev": "conc -n mkv,api,site,connect bun:dev:*",
    "dev:api": "bun --cwd api dev",
    "dev:site": "bun --cwd site dev",
    "dev:connect": "bun --cwd connect dev",
    "dev:mkv": "cd minikeyvalue && tools/bringup.sh",
    "fix": "bun --cwd connect fix && biome check --write",
    "test": "bun test",
    "test:device": "INTEGRATION=1 bun test api/scripts/device.test.ts",
    "test:frontend": "bun --cwd site test",
    "test:frontend:ui": "bun --cwd site test:ui",
    "test:frontend:integration": "INTEGRATION=1 bun --cwd site test",
    "test:all": "bun test && bun --cwd site test",
    "test:all:integration": "INTEGRATION=1 bun test api/scripts/device.test.ts && INTEGRATION=1 bun --cwd site test",
    "infra": "bun --cwd infra up",
    "db:push": "bun --cwd api db:push"
  },
  "workspaces": [
    "connect",
    "infra",
    "api",
    "site"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.2.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
