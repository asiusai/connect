{
  "name": "asiusai",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.2.9",
  "scripts": {
    "dev": "concurrently -n mkv,api,site,connect bun:dev:*",
    "dev:api": "bun --cwd api dev",
    "dev:site": "bun --cwd site dev",
    "dev:connect": "bun --cwd connect dev",
    "dev:mkv": "cd minikeyvalue && tools/bringup.sh",
    "build": "concurrently -n site,connect bun:build:*",
    "build:connect": "bun --cwd connect build",
    "build:site": "bun --cwd site build",
    "tsc": "tsc --noEmit",
    "fix": "biome check --write",
    "test": "bun test --concurrent",
    "integration": "INTEGRATION=1 bun test api/scripts/device.test.ts",
    "infra": "bun --cwd infra up"
  },
  "workspaces": [
    "connect",
    "infra",
    "api",
    "site"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "latest",
    "concurrently": "^9.2.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@types/ssh2": "^1.15.5",
    "ssh2": "^1.17.0"
  }
}
